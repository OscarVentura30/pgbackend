<!-- Modal Presentacion -->
<div class="modal fade" id="modalPresentacion" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

        <form onsubmit="return false">
            <div class="modal-header" style="background-color: #593196;">
                <h5 class="modal-title" id="staticBackdropLabel" style="color: white;">Agregar Presentaci贸n</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="input-presentacion-descripcion" placeholder="" name="presetacion" required>
                        <label for="floatingInput">Nombre de Presentaci贸n</label>
                    </div>
                    <p class="text-danger" id="alert-input-3"></p>
                 </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger"data-bs-dismiss="modal" >Cerrar</button>
                <button type="button" class="btn btn-success" onclick="agregarPresentacion()">Agregar</button>
            </div>
        </form>

    </div>
  </div>
</div>

<!-- Modal nueva medida-->
<div class="modal fade" id="modalMedida" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

        <form onsubmit="return false">
            <div class="modal-header" style="background-color: #593196;">
                <h5 class="modal-title" id="staticBackdropLabel" style="color: white;">Agregar Medida</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="input-medida-descripcion" placeholder="" name="medida" required>
                        <label for="floatingInput">Nombre de Medida</label>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input type="number" class="form-control" id="input-medida-valor" placeholder="" name="valor" required>
                        <label for="floatingInput">Valor Unitario</label>
                    </div>

                    <p class="text-danger" id="alert-input-4"></p>
                 </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger"data-bs-dismiss="modal" >Cerrar</button>
                <button type="button" class="btn btn-success" onclick="agregarMedida()">Agregar</button>
            </div>
        </form>

    </div>
  </div>
</div>

<!-- Modal nuevo -->
<div class="modal fade" id="modalProveedor" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

        <form onsubmit="return false">
            <div class="modal-header" style="background-color: #593196;">
                <h5 class="modal-title" id="staticBackdropLabel" style="color: white;">Agregar Proveedor</h5>
