<form action="/api/usuarios" method="post">

    <fieldset>

        <legend>Usuario Nuevo</legend>
                
            <div class="form-group">

                <label class="form-label mt-4">Datos del Empleado </label>

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Oscar" name="nombre">
                    <label for="floatingInput">Nombre</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Ventura" name="apellido">
                    <label for="floatingInput">Apellido</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
                    <label for="floatingInput">Email address</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
                    <label for="floatingPassword">Password</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="usuario.apellido" name="userName">
                    <label for="floatingInput">Usuario Alias</label>
                </div>
                
                <div class="form-group">
                    <label class="form-label mt-4">Salario</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Q</span>
                        <input type="number" class="form-control" aria-label="Amount (to the nearest dollar)" name="salario">
                        <span class="input-group-text">.00</span>
                    </div>

                    <legend class="mt-4">Rol del sistema</legend>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="rol" id="optionsRadios1" value="1" checked="1">
                            <label class="form-check-label" for="optionsRadios1">
                            Admin
                            </label>
                        </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="rol" id="optionsRadios2" value="2">
                        <label class="form-check-label" for="optionsRadios2">
                            Vendedor
                        </label>
                    </div>

                </div>
            </div>
        <br>
        <button type="submit" class="btn btn-primary">Guardar</button>

    </fieldset>
</form>
