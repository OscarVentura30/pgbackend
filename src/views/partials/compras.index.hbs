    </script>


<!-- Modal -->
<div class="modal fade" id="ComprasDetalle" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
            <div class="modal-header" style="background-color: #8e59df;">
