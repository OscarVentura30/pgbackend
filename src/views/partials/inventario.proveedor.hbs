                        <input type="text" class="form-control" id="input-descripcion-editar" placeholder="" name="descripcionEditar" required>
                        <label for="floatingInput">Descripcion</label>
                    </div>
                    <div class="form-group">

                                <label for="select-type-proveedor" class="form-label mt-4">Tipo de proveedor</label>
                                <select class="form-select" id="select-type-proveedor2" name="tipoProveedorId">
                        
                                </select>
                    </div>

                    <p class="text-danger" id="alert-input-1"></p>
                 </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger"data-bs-dismiss="modal" >Cerrar</button>
                <button type="button" class="btn btn-success" onclick="postEditar()">Guardar</button>
            </div>
        </form>

    </div>
  </div>
</div>



