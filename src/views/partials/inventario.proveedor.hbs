<!-- Modal nuevo -->
<div class="modal fade" id="modalAgragarProveedor" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

        <form onsubmit="return false">
            <div class="modal-header" style="background-color: #593196;">
                <h5 class="modal-title" id="staticBackdropLabel" style="color: white;">Agregar Proveedor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="input-nombre" placeholder="" name="nombre" required>
                        <label for="floatingInput">Nombre de Proveedor</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="input-razonsocial" placeholder="" name="razonsocial" required>
                        <label for="floatingInput">Razon social</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="input-direccion" placeholder="" name="direccion" required>
                        <label for="floatingInput">Direccion</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="number" class="form-control" id="input-telefono" placeholder="" name="telefono" required>
                        <label for="floatingInput">telefono</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="number" class="form-control" id="input-telefono2" placeholder="" name="telefono2" required>
                        <label for="floatingInput">telefono 2</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="input-email" placeholder="" name="email" required>
                        <label for="floatingInput">Correo Electronico</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="input-sitioWeb" placeholder="" name="sitioWeb" required>
                        <label for="floatingInput">Sitio Web</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="input-descripcion" placeholder="" name="descripcion" required>
                        <label for="floatingInput">Descripcion</label>
                    </div>
                    <div class="form-group">

                                <label for="select-type-proveedor" class="form-label mt-4">Tipo de proveedor</label>
                                <select class="form-select" id="select-type-proveedor" name="tipoProveedorId">
                        
                                </select>
                    </div>

                    <p class="text-danger" id="alert-input-1"></p>
                 </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger"data-bs-dismiss="modal" >Cerrar</button>
                <button type="button" class="btn btn-success" onclick="agregar()">Agregar</button>
            </div>
        </form>

    </div>
  </div>
</div>


