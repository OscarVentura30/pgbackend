<script src="/js/sweetalert2@11.js"></script>

<script>

    $(document).ready(() => {
        var url = '/api/get-type-client';

        $('#tablaClientesTipo').DataTable ({

            "language": {
                "url": "/DataTables/es-MX.json"
            },

            "ajax":{
                    "url": url,
                    "dataSrc":""
            },
            "columns": [
            {"data" : "id"},
            {"data" : "alias"},
            {"data" : "descripcion"},
            ],

        });

    });
        
</script>

    
